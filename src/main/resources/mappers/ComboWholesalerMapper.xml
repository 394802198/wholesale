<mapper namespace="com.tm.wholesale.mapper.ComboWholesalerMapper">

	<!-- DEFINITION AREA -->

	<sql id="comboWholesalerColumns">
		cw.`id`				as cw_id,
		cw.`name`				as cw_name,
		cw.`wholesaler_id`				as cw_wholesaler_id,
		cw.`wholesale_price`				as cw_wholesale_price,
		cw.`selling_price`				as cw_selling_price,
		cw.`earned_price`				as cw_earned_price,
		cw.`is_official_combo`				as cw_is_official_combo
	</sql>

	<resultMap type="ComboWholesaler" id="comboWholesalerResultMap">
		<id property="id" column="cw_id" />
		<result property="name" column="cw_name" />
		<result property="wholesaler_id" column="cw_wholesaler_id" />
		<result property="wholesale_price" column="cw_wholesale_price" />
		<result property="selling_price" column="cw_selling_price" />
		<result property="earned_price" column="cw_earned_price" />
		<result property="is_official_combo" column="cw_is_official_combo" />
	</resultMap>

	<sql id="comboWholesalerWhere">
		<where>
			<if test="params.id != null">cw.id = #{params.id}</if>
			<if test="params.name != null">and cw.name = #{params.name}</if>
			<if test="params.wholesaler_id != null">and cw.wholesaler_id = #{params.wholesaler_id}</if>
			<if test="params.wholesale_price != null">and cw.wholesale_price = #{params.wholesale_price}</if>
			<if test="params.selling_price != null">and cw.selling_price = #{params.selling_price}</if>
			<if test="params.earned_price != null">and cw.earned_price = #{params.earned_price}</if>
			<if test="params.is_official_combo != null">and cw.is_official_combo = #{params.is_official_combo}</if>
		</where>
	</sql>

	<!-- // DEFINITION AREA -->

	<!-- =================================================================================== -->

	<!-- SELECT AREA -->

	<select id="selectComboWholesalers" parameterType="ComboWholesaler" resultType="ComboWholesaler">
		select * from combo_wholesaler as cw
		<include refid="comboWholesalerWhere"/>
	</select>

	<!-- select comboWholesaler page -->
	<select id="selectComboWholesalersByPage" parameterType="Page" resultMap="comboWholesalerResultMap">
		select 
			<include refid="comboWholesalerColumns"/>
			from combo_wholesaler as cw
			<include refid="comboWholesalerWhere"/>
			<if test="params.orderby != null">${params.orderby}</if>
			limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select comboWholesaler amount -->
	<select id="selectComboWholesalersSum" parameterType="Page" resultType="int">
		select count(*) from combo_wholesaler as cw
		<include refid="comboWholesalerWhere"/>
	</select>

	<!-- // END SELECT AREA -->

	<!-- =================================================================================== -->

	<!-- INSERT AREA -->

	<insert id="insertComboWholesaler" parameterType="ComboWholesaler" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `combo_wholesaler`(
			`id`, `name`, `wholesaler_id`, `wholesale_price`, `selling_price`, 
			`earned_price`, `is_official_combo`
		) VALUES (
			#{id}, #{name}, #{wholesaler_id}, #{wholesale_price}, #{selling_price}, 
			#{earned_price}, #{is_official_combo}
		)
	</insert>

	<!-- // END INSERT AREA -->

	<!-- =================================================================================== -->

	<!-- UPDATE AREA -->

	<!-- update comboWholesaler -->
	<update id="updateComboWholesaler" parameterType="ComboWholesaler">
		update combo_wholesaler
		<set>
			<if test="name != null">name = #{name},</if>
			<if test="wholesaler_id != null">wholesaler_id = #{wholesaler_id},</if>
			<if test="wholesale_price != null">wholesale_price = #{wholesale_price},</if>
			<if test="selling_price != null">selling_price = #{selling_price},</if>
			<if test="earned_price != null">earned_price = #{earned_price},</if>
			<if test="is_official_combo != null">is_official_combo = #{is_official_combo}</if>
		</set>
		<where>
			<if test="params.id != null">id = #{params.id}</if>
		</where>
	</update>

	<!-- // END UPDATE AREA -->

	<!-- =================================================================================== -->
	<!-- DELETE AREA -->

	<delete id="deleteComboWholesalerById" parameterType="int">
		DELETE FROM combo_wholesaler WHERE id = #{0}
	</delete>

	<!-- // END DELETE AREA -->

</mapper>