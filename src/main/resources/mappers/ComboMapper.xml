<!-- SELECT AREA --><!-- // END SELECT AREA -->
<!-- =================================================================================== -->
<!-- INSERT AREA --><!-- // END INSERT AREA -->
<!-- =================================================================================== -->
<!-- UPDATE AREA --><!-- // END UPDATE AREA -->
<!-- =================================================================================== -->
<!-- DELETE AREA --><!-- // END DELETE AREA -->

<mapper namespace="com.tm.wholesale.mapper.ComboMapper">

	<!-- DEFINITION AREA -->

	<sql id="comboColumns">
		c.`id`				as c_id,
		c.`name`				as c_name,
		c.`wholesale_price`				as c_wholesale_price,
		c.`selling_price`				as c_selling_price,
		c.`earned_price`				as c_earned_price
	</sql>

	<resultMap type="Combo" id="comboResultMap">
		<id property="id" column="c_id" />
		<result property="name" column="c_name" />
		<result property="wholesale_price" column="c_wholesale_price" />
		<result property="selling_price" column="c_selling_price" />
		<result property="earned_price" column="c_earned_price" />
	</resultMap>

	<sql id="comboWhere">
		<where>
			<if test="params.id != null">c.id = #{params.id}</if>
			<if test="params.name != null">and c.name = #{params.name}</if>
			<if test="params.wholesale_price != null">and c.wholesale_price = #{params.wholesale_price}</if>
			<if test="params.selling_price != null">and c.selling_price = #{params.selling_price}</if>
			<if test="params.earned_price != null">and c.earned_price = #{params.earned_price}</if>
		</where>
	</sql>

	<!-- // DEFINITION AREA -->

	<!-- =================================================================================== -->

	<!-- SELECT AREA -->

	<select id="selectCombos" parameterType="Combo" resultType="Combo">
		select * from combo as c
		<include refid="comboWhere"/>
	</select>

	<!-- select combo page -->
	<select id="selectCombosByPage" parameterType="Page" resultMap="comboResultMap">
		select 
			<include refid="comboColumns"/>
			from combo as c
			<include refid="comboWhere"/>
			<if test="params.orderby != null">${params.orderby}</if>
			limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select combo amount -->
	<select id="selectCombosSum" parameterType="Page" resultType="int">
		select count(*) from combo as c
		<include refid="comboWhere"/>
	</select>

	<!-- // END SELECT AREA -->

	<!-- =================================================================================== -->

	<!-- INSERT AREA -->

	<insert id="insertCombo" parameterType="Combo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `combo`(
			`id`, `name`, `wholesale_price`, `selling_price`, `earned_price`
		) VALUES (
			#{id}, #{name}, #{wholesale_price}, #{selling_price}, #{earned_price}
		)
	</insert>

	<!-- // END INSERT AREA -->

	<!-- =================================================================================== -->

	<!-- UPDATE AREA -->

	<!-- update combo -->
	<update id="updateCombo" parameterType="Combo">
		update combo
		<set>
			<if test="name != null">name = #{name},</if>
			<if test="wholesale_price != null">wholesale_price = #{wholesale_price},</if>
			<if test="selling_price != null">selling_price = #{selling_price},</if>
			<if test="earned_price != null">earned_price = #{earned_price}</if>
		</set>
		<where>
			<if test="params.id != null">id = #{params.id}</if>
		</where>
	</update>

	<!-- // END UPDATE AREA -->

	<!-- =================================================================================== -->
	<!-- DELETE AREA -->

	<delete id="deleteComboById" parameterType="int">
		DELETE FROM combo WHERE id = #{0}
	</delete>

	<!-- // END DELETE AREA -->

</mapper>