<mapper namespace="com.tm.wholesale.mapper.ComboDetailMapper">

	<!-- DEFINITION AREA -->

	<sql id="comboDetailColumns">
		cd.`id`				as cd_id,
		cd.`name`				as cd_name,
		cd.`group`				as cd_group,
		cd.`type`				as cd_type,
		cd.`wholesale_price`				as cd_wholesale_price,
		cd.`selling_price`				as cd_selling_price,
		cd.`earned_price`				as cd_earned_price
	</sql>

	<resultMap type="ComboDetail" id="comboDetailResultMap">
		<id property="id" column="cd_id" />
		<result property="name" column="cd_name" />
		<result property="group" column="cd_group" />
		<result property="type" column="cd_type" />
		<result property="wholesale_price" column="cd_wholesale_price" />
		<result property="selling_price" column="cd_selling_price" />
		<result property="earned_price" column="cd_earned_price" />
	</resultMap>

	<sql id="comboDetailWhere">
		<where>
			<if test="params.id != null">cd.id = #{params.id}</if>
			<if test="params.name != null">and cd.name = #{params.name}</if>
			<if test="params.group != null">and cd.group = #{params.group}</if>
			<if test="params.type != null">and cd.type = #{params.type}</if>
			<if test="params.wholesale_price != null">and cd.wholesale_price = #{params.wholesale_price}</if>
			<if test="params.selling_price != null">and cd.selling_price = #{params.selling_price}</if>
			<if test="params.earned_price != null">and cd.earned_price = #{params.earned_price}</if>
		</where>
	</sql>

	<!-- // DEFINITION AREA -->

	<!-- =================================================================================== -->

	<!-- SELECT AREA -->

	<select id="selectComboDetails" parameterType="ComboDetail" resultType="ComboDetail">
		select * from combo_detail as cd
		<include refid="comboDetailWhere"/>
	</select>

	<!-- select comboDetail page -->
	<select id="selectComboDetailsByPage" parameterType="Page" resultMap="comboDetailResultMap">
		select 
			<include refid="comboDetailColumns"/>
			from combo_detail as cd
			<include refid="comboDetailWhere"/>
			<if test="params.orderby != null">${params.orderby}</if>
			limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select comboDetail amount -->
	<select id="selectComboDetailsSum" parameterType="Page" resultType="int">
		select count(*) from combo_detail as cd
		<include refid="comboDetailWhere"/>
	</select>

	<!-- // END SELECT AREA -->

	<!-- =================================================================================== -->

	<!-- INSERT AREA -->

	<insert id="insertComboDetail" parameterType="ComboDetail" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `combo_detail`(
			`id`, `name`, `group`, `type`, `wholesale_price`, 
			`selling_price`, `earned_price`
		) VALUES (
			#{id}, #{name}, #{group}, #{type}, #{wholesale_price}, 
			#{selling_price}, #{earned_price}
		)
	</insert>

	<!-- // END INSERT AREA -->

	<!-- =================================================================================== -->

	<!-- UPDATE AREA -->

	<!-- update comboDetail -->
	<update id="updateComboDetail" parameterType="ComboDetail">
		update combo_detail
		<set>
			<if test="name != null">name = #{name},</if>
			<if test="group != null">group = #{group},</if>
			<if test="type != null">type = #{type},</if>
			<if test="wholesale_price != null">wholesale_price = #{wholesale_price},</if>
			<if test="selling_price != null">selling_price = #{selling_price},</if>
			<if test="earned_price != null">earned_price = #{earned_price}</if>
		</set>
		<where>
			<if test="params.id != null">id = #{params.id}</if>
		</where>
	</update>

	<!-- // END UPDATE AREA -->

	<!-- =================================================================================== -->
	<!-- DELETE AREA -->

	<delete id="deleteComboDetailById" parameterType="int">
		DELETE FROM combo_detail WHERE id = #{0}
	</delete>

	<!-- // END DELETE AREA -->

</mapper>